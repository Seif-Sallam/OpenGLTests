{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-std=c++17",
                "-I${workspaceFolder}/",
                "-I${workspaceFolder}/Thirdparty/glad/",
                "-I${workspaceFolder}/Thirdparty/glfw/include/",
                "-I${workspaceFolder}/Thirdparty/imgui/",
                "-I${workspaceFolder}/Thirdparty/glm/",
                "-I${workspaceFolder}/Thirdparty/KHR/",
                "-I${workspaceFolder}/Thirdparty/stbimage/",
                "*.cpp",
                "../Thirdparty/glad/glad.c",
                "../Thirdparty/stbimage/stbimage/stb_image.cpp",
                "-o",
                "../DebugVersion",
                "-L${workspaceFolder}/Thirdparty/glfw/",
                "-L${workspaceFolder}/Thirdparty/imgui/imgui/lib/",
                "-lGL",
                "-lglfw3",
                "-lGLU",
                "-pthread",
                "-ldl",
                "-lrt",
                "-lXi",
                "-limgui"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}